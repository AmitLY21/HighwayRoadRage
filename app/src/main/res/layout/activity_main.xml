                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole53"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_Layout_Car_Row"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/panel_Layout_Fifth">

            <LinearLayout
                android:id="@+id/panel_CarRow1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_car0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:src="@drawable/car">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_CarRow2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_car1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:visibility="visible"
                    android:src="@drawable/car">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_CarRow3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/panel_IMG_car2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:src="@drawable/car">

                </ImageView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/panel_Layout_Car_Row">

            <Button
                android:id="@+id/panel_BTN_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Left"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/panel_IMG_wheel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="44dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/wheel" />

            <Button
                android:id="@+id/panel_BTN_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Right"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>