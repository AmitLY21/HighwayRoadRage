<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road"
    tools:context=".GameActivity">

    <RelativeLayout
        android:id="@+id/panel_IMG_hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/panel_IMG_heart1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/panel_IMG_heart2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/panel_IMG_heart1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/panel_IMG_heart1"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/panel_IMG_heart3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/panel_IMG_heart2"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/panel_IMG_heart2"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/panel_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/panel_IMG_heart1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="0000"
            android:textSize="40sp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/panel_IMG_hearts">

        <LinearLayout
            android:id="@+id/panel_Layout_First"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/panel_TopRow1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:src="@drawable/hole" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_TopRow2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_barrier12"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/barrier" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_TopRow3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_Layout_Second"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/panel_Layout_First">

            <LinearLayout
                android:id="@+id/panel_MidRow1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_MidRow2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_barrier22"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/barrier" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_MidRow3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_Layout_Third"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/panel_Layout_Second">

            <LinearLayout
                android:id="@+id/panel_Third_Row1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_Third_Row2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_barrier32"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:src="@drawable/barrier" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_Third_Row3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_Layout_Fourth"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/panel_Layout_Third">

            <LinearLayout
                android:id="@+id/panel_Fourth_Row1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole41"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_Fourth_Row2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_barrier42"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/barrier" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_Fourth_Row3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole43"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel_Layout_Fifth"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/panel_Layout_Fourth">

            <LinearLayout
                android:id="@+id/panel_Fifth_Row1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_hole51"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/hole" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_Fifth_Row2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panel_IMG_barrier52"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/barrier" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_Fifth_Row3"
                android:layout_width="0dp"
